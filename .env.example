# Flying Saucer Pie Company - Environment Variables
# Copy this file to .env.local and fill in the values

# ==============================================================================
# Site Configuration
# ==============================================================================

# Site URL (used for metadata, OG images, etc.)
NEXT_PUBLIC_SITE_URL=https://flyingsaucerpieshop.com

# Site Name
NEXT_PUBLIC_SITE_NAME="Flying Saucer Pie Company"

# ==============================================================================
# Business Contact Information
# ==============================================================================

# Business Phone Number
NEXT_PUBLIC_PHONE=713-694-1141

# Business Email
NEXT_PUBLIC_EMAIL=info@flyingsaucerpies.com

# ==============================================================================
# Social Media Links
# ==============================================================================

# Facebook Page URL
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/flyingsaucerpies

# Instagram Profile URL
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/flyingsaucerpies

# ==============================================================================
# Feature Flags
# ==============================================================================

# Enable hero animation (set to 'false' to disable)
NEXT_PUBLIC_ENABLE_HERO_ANIMATION=true

# Enable review carousel animation
NEXT_PUBLIC_ENABLE_REVIEW_ANIMATION=true

# Enable scroll animations
NEXT_PUBLIC_ENABLE_SCROLL_ANIMATIONS=true

# ==============================================================================
# Analytics & Monitoring (Optional)
# ==============================================================================

# Google Analytics ID (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics (enabled by default on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS=true

# ==============================================================================
# Development/Debug Settings
# ==============================================================================

# Show debug info (dev only)
# NEXT_PUBLIC_DEBUG=false

# ==============================================================================
# API Keys (if needed in future)
# ==============================================================================

# Example: Stripe public key (if implementing payments)
# NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_...

# Example: Email service API key (server-side only, no NEXT_PUBLIC prefix)
# RESEND_API_KEY=re_...
